ENV["GEM_PATH"] = ENV["GEM_HOME"] = File.join File.dirname(__FILE__), "../"

require 'rubygems'

version = ">= 0"

if ARGV.first
  str = ARGV.first
  str = str.dup.force_encoding("BINARY") if str.respond_to? :force_encoding
  if str =~ /\A_(.*)_\z/
    version = $1
    ARGV.shift
  end
end

gem 'haml', version
load Gem.bin_path('haml', 'haml', version)
